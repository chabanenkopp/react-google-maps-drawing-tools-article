{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "allowJs": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "incremental": true,
    // "typeRoots" : ["node_modules/@types", "src/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}
